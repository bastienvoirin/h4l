#!/bin/sh

# Custom post-commit hook that runs the linter.

action() {
    # just lint
    if [ ! -d "${H4L_BASE}" ]; then
        >&2 echo "H4L_BASE not setup, skip linting"
    elif [ "${H4L_SKIP_POST_COMMIT}" != "1" ]; then
        echo "post-commit linting ..."
        bash "${H4L_BASE}/tests/run_linting"
        echo
    fi

    # always end successfully
    return "0"
}
action "$@"
